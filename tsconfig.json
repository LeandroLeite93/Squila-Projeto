{
    "compileOptions": {
        "target": "es5",
        "module": "commonjs",
        "allowJS": true,
        "outDir": "./dist",
        "rootDir": ".scr",
        "strict": true, 
        "strictPropertyInitialization": false,
        "moduleResolution": "node",
        "baseUrl": "/.src",
        "allowSyntheticfaultImports": true, 
        "esModuleInterop": true, 
        "experimentalDecorators": true,
        "emitDecorationMetadata": true,
        "forceConsistentCastingInFileName": true, 
        "noImplicitAny": true,
        "paths": {
            "@services/*": ["./services/*"],
            "@schemas/*": ["schemas/*"]
        }
    },
    "include": ["scr", "__tests__*"],
}